{
  "env": {
    "jest": true
  },
  "ignorePatterns": [
    "cjs",
    "esm",
    "node_modules",
    "ts/type-checker",
    "ts/types",
    "tslib"
  ],
  "overrides": [
    {
      "extends": "plugin:harmony/ts-recommended",
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "no-use-before-define": "off",
        "brace-style": ["error", "1tbs"],
        "harmony/ts-member-delimiter-style": [
          "error",
          {
            "multiline": {
              "delimiter": "comma"
            },
            "singleline": {
              "delimiter": "comma"
            }
          }
        ]
      }
    }
  ]
}