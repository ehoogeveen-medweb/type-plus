{
  "extends": "@repobuddy/typescript/tsconfig/monorepo",
  "compilerOptions": {
    "rootDir": "ts",
    "skipLibCheck": true
  },
  "exclude": [
		"node_modules",
    "ts/type-checker",
    "ts/types",
    "ts/**/*.spec.*",
    "ts/**/*.unit.*",
    "ts/**/*.accept.*",
    "ts/**/*.integrate.*",
    "ts/**/*.system.*",
    "ts/**/*.pert.*",
    "ts/**/*.test.*",
    "ts/**/*.stress.*"
  ],
  "include": [
    "ts",
    "types"
  ]
}
